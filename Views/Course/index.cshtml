@model IEnumerable<Candidate>
@if(Model.Count() > 0)
{
   <h6 class="display-6">
    Applications(@Model.Count())
   </h6>
   <table class="table table-hover">
       <thead>
           <tr>
               <th>Email</th>
               <th>Full Name</th>
               <th>Apply at</th>
               <th>Course</th>
           </tr>
       </thead>
       <tbody>
        @foreach (Candidate item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.FullName</td>
                <td>@item.applyAt</td>
                <td>@item.SelectedCourse</td>
            </tr>
        }
       </tbody>
   </table>
}
else
{
    <div class="alert alert-info">
        <h3>Henüz başvuru yapılmamış</h3>
        <a class="alert-link" asp-action="Apply">Apply</a>
    </div>
}

